<Page x:Class="CommunicationsShowroom.View.Page.InfoUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CommunicationsShowroom.View.Page"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="300"
      Title="InfoUserPage">

         <Grid  >
        <Border CornerRadius="20" BorderThickness="2" BorderBrush="Black" Background="#555555">
            <StackPanel
            Orientation="Vertical"
                Opacity="1" 
                VerticalAlignment="Top">
                <Label Content="Аккаунт:"  Foreground="Black" FontSize="15"/>
                <Label Content="{Binding Name}"  Foreground="#c2d430" FontSize="17"/>
                <Label Content="{Binding Lastname}"  Foreground="#c2d430"  FontSize="17"/>
                <Label Content="{Binding Position}"  Foreground="Black"  FontSize="13"/>
            </StackPanel>
        </Border>
    </Grid>
   
</Page>
